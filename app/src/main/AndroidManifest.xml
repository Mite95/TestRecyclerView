<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="testrecyclerview.fxs.com.testrecyclerview">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".listviewstyle.BaseRecyclerViewActivity" />
        <activity android:name=".listviewstyle.LineRecycleViewActivity" />
        <activity android:name=".listviewstyle.ClickItmeRecycleViewActivity" />
        <activity android:name=".listviewstyle.PullToRefreshActivity" />
        <activity android:name=".listviewstyle.BatchesRequestActivity" />
        <activity android:name=".listviewstyle.AddViewActivity" />
        <activity android:name=".listviewstyle.SynthesizeActivity" />
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".gridding.BaseGridActivity" />
        <activity android:name=".gridding.GridLFActivity" />
        <activity android:name=".waterfall.WaterfallActivity"></activity>
    </application>

</manifest>